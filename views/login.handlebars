<div class="row">

    <div class="col-md-6">
        <h2>Login</h2>

        <form class="form login-form">
            <div class="mb-3">
                <label for="email-login" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email-login" placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label for="password-login" class="form-label">Password:</label>
                <input type="password" class="form-control" id="password-login" placeholder="123">
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>Signup</h2>
        <form class="form signup-form">
            <div class="mb-3">
                <label for="name-signup" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name-signup" placeholder="My Tang">
            </div>
            <div class="mb-3">
                <label for="email-signup" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email-signup" placeholder="name@example.com">
            </div>
            <div class="mb-3">
                <label for="password-signup" class="form-label">Password:</label>
                <input type="password" class="form-control" id="password-signup" placeholder="Must be 8 characters long">
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Signup</button>
            </div>
        </form>    
    </div>
</div>

<script src="./js/login.js"></script>